#main-container {
  /* To offset the fixed nav bar */
  padding-top: 70px;
}

#profile-photo{
  border-radius: 45px;
  padding: 10px;
}


#interim_span{
  color: grey;
}

#final_span{
  color: black;
}

#logo{
  width: 60px;
  margin: 0px;
  margin-top: -10px;
  z-index: 99;
}
.nav-item{
  margin-top: 20px;
  margin-left: 10px
}
li{
  text-decoration: none
}

#navbar{
  border: 1px solid grey;
  position: fixed;
  width: 100%;
  height: 70px;
  border-top: none;

}

#navbar a{
  cursor: pointer;
}

#treemap{
  text-align: center;
}

.treemap-node {
  box-sizing: border-box;
  border: 1px solid #fff;
  padding: 0.5em;
  overflow: hidden;
  color: #fff;
  text-shadow: 1px 1px #333;
}

.treemap-legend {
  width: 500px;
  padding: 0 1em;
  box-sizing: border-box;
  border: 1px solid #fff;
  overflow: hidden;
  color: #fff;
  text-shadow: 1px 1px #333;
  background-image: -webkit-linear-gradient(left, #93C 0%, cyan 20%, lime 40%, yellow 60%, orange 80%, red 100%);
}
.treemap-legend-end {
  float: right;
}
.loader {
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  margin-top: 50px;
  height: 100%;
  z-index: 999;
  background: url('http://www.hannahreed.co.uk/images/loading.gif') 50% 50% no-repeat rgb(249,249,249);
}
#range-slider{
  background-color: black;
}
#welcome{
  margin-top: 130px;
  margin-left: 20px;
  color: black;
  opacity: 0.4;
}

#calendar{
  margin-left: 30px;
}
#welcome-background{
  padding: 100px;
  position:fixed;
  width:100%;
  height:100%;
  background: url('http://mediad.publicbroadcasting.net/p/kuow/files/201311/elephant-herd.jpg') no-repeat;
  background-size: 100%;
}
.devise-alerts {
  position:  fixed;
  margin-left: 30px;
}

#scroller-icon{
  font-size: 35px;
  color: rgba(0,0,0,.3);
}

#scroller{
  position: fixed;
  right: 0px;
  bottom: 0px;
  margin: 50px;
  z-index: 10000;
}

#datetimebutton{
  margin: 10px;
  margin-left: 10px;
  border-radius: 5px;
  background: white;
  font-family: "Lucida Grande";
}

#transcript-box {
  border: 1px solid #ddd;
  border-radius: 10px;
  display: none;
  margin: 20px auto;
  padding: 20px;
  position: relative;
  width: 90%
}

#email{
  font-size: 18px;
  right: 5px;
  position: absolute;
  top: 5px;
}

#extra-menu {
  text-align: center;
}

#extra-menu>button {
  margin: 10px 20px;
}

#transcript{
  border-radius: 5px;
  background: white;
  font-family: "Lucida Grande";
}

#alchemy-results-view {
  padding-top: 20px;
}

#alchemy{
  border-radius: 5px;
  background: white;
 font-family: "Lucida Grande";
}

#live{
  background: "red";
  margin: 10px;
  margin-left: 10px;
  border-radius: 5px;
  background: white;
  font-family: "Lucida Grande";
}
.search-term {
  display: inline-block;
  border-radius: 10px;
  padding: 5px;
  color: white;
  margin-right: 5px;
  margin-left: 30px;
}
.search-count {
  font-size: 18px;
}

.close{
  color: rgba(0,0,0,.4);
  margin: 20px;
}
.close :hover{
  color: "red";
}
#search {
  background: rgba(255,255,255,1);
  box-shadow: 1px 0px 1px 1px rgba(68,68,68,0.2);
  float: right;
  height: 55px;
  margin-top: -75px;
  width: 30%;
  z-index: 100;
}

#search-input{
  background: rgba(255,255,255,1);
  border: none;
  color: rgba(0,0,0,.5);
  font-family: "Lucida Grande";
  height: 50px;
  padding: 5px;
  width: 60%;
}

#word-search{
  background: white;
  border: 1px solid #ddd;
  border-radius: 90px;
  width: 32px;
}

#legend{
  margin-left: 30px
}

#devise{
  margin-left: 100px;
  margin-top: 100px;
}

#relephant-placeholder {
  font-size: 36px;
  height: 300px;
  text-align: center;
}

#relephant-placeholder img {
  margin-top: 100px;
  opacity: .7;
}

#entity-results {
  text-align: center;
}

.entity-item-view>div {
  border: 1px solid black;
  border-radius: 10px;
  display: inline-block;
  height: 400px;
  margin: 0 20px;
  width: 29%;
  min-width: 320px;
}

.entity-item-view{
  background: rgba(0,0,0,.025);
  margin: 15px auto 0 auto;
  width: 90%;
  padding: 10px;
}

.google-results-view {
  overflow-y: scroll;
  padding: 10px;
  text-align: left;
}

.google-result-description {
  font-size: 12px;
}

.google-images-view {
  overflow-y: scroll;
}

.google-image-image {
  height: auto;
  width: 50%;
  padding: 5px;
  float: left;
}

.map-canvas{
  height: 100%;
  margin: 0;
  padding: 0;
  border-radius: 10px;
}

.crunchbase-view {
  margin: 20px 20px;
  overflow-y: scroll;
  padding: 10px;
  text-align: left;
}

.crunch-bold {
  font-weight: bold;
}

.entity-title{
  margin-top: 10px;
  color: rgba(0,0,0,.6)
}

.reveal{
  font-size: 15px;
  padding: 5px;
  top: 0px;
  z-index: 5;
  background: white
  }

.icons{
  position: absolute;
  top: 0px;
  right: 0px;
  height: 5%;
  width: 5%;
  background: white;
  font-size: 12px;
  z-index: 5
}

#treemap-button{
  margin: 10px;
  border-radius: 5px;
  background: white;
  font-family: "Lucida Grande";
  margin-left: 10%;
  padding: 5px;
}

#RelephantError {
  background: lightgrey;
  border: 1px solid red;
  border-radius: 5px;
  margin: 30px auto;
  padding: 10px;
  text-align: center;
  width: 50%;
}

#entity-nav{
  display: none;
  text-align: center
}

#entity-nav {
  list-style: none;
}

#entity-nav ul li{
  display: inline;
  margin: 0 20px;
}

.entity-nav-click{
  color: rgba(0,0,0,.3);
}

@media only screen and (max-width: 480px) {
  #scroller {
    visibility: hidden;
  }
}
